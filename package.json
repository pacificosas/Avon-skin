{
  "name": "src",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm-watch",
    "buildjs": "webpack",
    "buildcss": "sass css/sass:css/dist"

  },
  "watch": {
    "buildjs": {
      "patterns": "js",
      "extensions": "ts",
      "legacyWatch": true,
      "runOnChangeOnly": true
    },
    "buildcss": {
      "patterns": "sass",
      "extensions": "scss,sass",
      "legacyWatch": true,
      "runOnChangeOnly": true
    }
  },
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "npm-watch": "^0.6.0",
    "sass": "^1.26.0",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10"
  }
}
